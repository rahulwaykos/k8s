
token = "k8s/nodes/token"

swapoff -a
yum install docker python3 python-pip -y
pip install paramiko 


systemctl daemon-reload
systemctl restart docker
systemctl enable docker

read -p "enter IP of machine for api-server : " api
echo -e "\n"

echo "Using Calico plugin for networking"
echo -e "\n"
kubeadm init --apiserver-advertise-address=$api --pod-network-cidr=192.168.0.0/16 --ignore-preflight-errors=NumCPU | tail -2 >> token

mkdir -p $HOME/.kube
sudo cp -i /etc/kubernetes/admin.conf $HOME/.kube/config
sudo chown $(id -u):$(id -g) $HOME/.kube/config

kubectl apply -f https://docs.projectcalico.org/v3.11/manifests/calico.yaml

systemctl enable kubelet --now
kubectl get pods --all-namespaces
kubectl get nodes

echo -e "\n \t Wait till all pods are running\n
\t\tCopy the files in nodes directory to the respective node to join cluster" 




